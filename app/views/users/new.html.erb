<div id="box">
  <div class="block" id="block-signup">
    <h2>Sign up</h2>
    <div class="content">
      <% form_for @user, :html => {:class => "form"} do |f| %>
        <div class="group">
          <div class="left">
            <%= f.label :username, "Login", :class => "label" %>
          </div>
          <div class="right">
            <%= f.text_field :username, :class => "text_field" %>
            <%= error_message_on :user, :username %>
            <span class="description">Use your ldap name</span>
          </div>
          <div class="clear"></div>
        </div>
        <div class="group">
          <div class="left">
            <%= f.label :email, "Email", :class => "label" %>
          </div>
          <div class="right">
            <%= f.text_field :email, :class => "text_field" %>
            <%= error_message_on :user, :email %>
            <span class="description">Ex: test@example.com</span>
          </div>
          <div class="clear"></div>
        </div>
        <% unless AUTHLOGIC_ADDON == "ldap" %>
          <div class="group">
            <div class="left">
              <%= f.label :password, "Password", :class => "label" %>
            </div>
            <div class="right">
              <%= f.password_field :password, :class => "text_field" %>
              <%= error_message_on :user, :password %>
              <span class="description">Choose it wisely</span>
            </div>
            <div class="clear"></div>
          </div>
          <div class="group">
            <div class="left">
              <%= f.label :password_confirmation, "Password confirmation", :class => "label" %>
            </div>
            <div class="right">
              <%= f.password_field :password_confirmation, :class => "text_field" %>
              <%= error_message_on :user, :password_confirmation %>
              <span class="description">Should be the same as above</span>
            </div>
            <div class="clear"></div>
          </div>
        <% end %>
        <div class="group navform">
          <%= f.submit "Sign up", :class => "button" %>
        </div>
      <% end %>
    </div>
  </div>
</div>