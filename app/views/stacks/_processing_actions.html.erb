<div id="notification-actions">
  <% if current_user && stack.can_change_status?(current_user) %>
    <% remote_form_for([@project, stack], :html => {:class => "table-buttons"}) do |f| %>
      <%= f.hidden_field :status, :value => "incoming" %>
      <%= f.submit "abort", :class => "flat-button", :id => "abort-button" %>
    <% end %>
    <% remote_form_for([@project, stack], :html => {:class => "table-buttons"}) do |f| %>
      <%= f.hidden_field :status, :value => (stack.cycle_status) %>
      <%= f.hidden_field :user_id, :value => current_user.id %>
      <%= f.submit stack.cycle_status, :class => "flat-button", :id => "action-button"%>
    <% end %>
  <% end %>
</div>